<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.bahaso">

    <!-- selected -->
    <item app:state_dropped="false">
        <shape
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <corners android:radius="2dp" />
            <solid android:color="@color/bahaso_gray" />
            <stroke android:color="@color/bahaso_darker_gray" android:width="1dp" />
        </shape>
    </item>

    <item app:state_dropped="true">
        <shape
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <corners android:radius="2dp" />
            <solid android:color="@color/bahaso_darker_gray" />
        </shape>
    </item>



</selector>