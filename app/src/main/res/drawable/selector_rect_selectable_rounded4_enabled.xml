<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  activated false -->
    <item android:state_activated="false" android:state_selected="true"
        android:state_enabled="true">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@color/bahaso_red" />
        </shape>
    </item>

    <!--  activated true -->
    <item android:state_activated="true" android:state_selected="true"
        android:state_enabled="true">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@color/bahaso_blue" />
        </shape>
    </item>

    <!--  enabled press -->
    <item android:state_pressed="true" android:state_enabled="true"
        android:state_selected="false" >
        <shape>
            <stroke android:color="@color/bahaso_blue"/>
            <corners android:radius="4dp" />
            <solid android:color="@color/bahaso_lighter_blue" />
        </shape>
    </item>
    <!--  enabled -->
    <item android:state_pressed="false" android:state_enabled="true"
        android:state_selected="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/bahaso_blue"/>
            <corners android:radius="4dp" />
            <solid android:color="@color/bahaso_lighter_blue" />
        </shape>
    </item>
    <!--  disabled -->
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="1dp" android:color="@android:color/darker_gray"/>
            <corners android:radius="4dp" />
            <solid android:color="@color/bahaso_darker_gray" />
        </shape>
    </item>
</selector>