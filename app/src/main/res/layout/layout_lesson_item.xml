<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bahaso_white_gray"

    android:padding="10dp">
    <android.support.v7.widget.CardView
        android:id="@+id/appCompatImageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="3dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true" >
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/lesson_img"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/background_lesson_country_course_name"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@+id/appCompatImageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/bahaso_white_gray"
        android:textAllCaps="true"
        android:text="Country"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/txtLessonItem"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/appCompatImageView2"
        android:layout_centerHorizontal="true" />
    </android.support.v7.widget.CardView>




    <LinearLayout
        android:visibility="gone"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/appCompatImageView3"
        android:id="@+id/layoutCourseCountry">


    </LinearLayout>



    <LinearLayout
        android:focusable="false"
        android:clickable="true"
        android:background="#00ffffff"
        android:orientation="vertical"
        android:gravity="center|left"
        android:paddingLeft="30dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/appCompatImageView3">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            >
            <include layout="@layout/layout_radio_button"/>

        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:focusable="false"
        android:clickable="true"
        android:background="#00ffffff"
        android:orientation="vertical"
        android:gravity="center|left"
        android:paddingLeft="30dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayoutClick"
        android:layout_alignBottom="@+id/appCompatImageView3">

    </LinearLayout>

</RelativeLayout>
