<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bahaso.typecase.LittleBoxSelectionFragment"

    >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:id="@+id/scrollViewLostWordType"
        android:scrollbarSize="4dp"
        android:scrollbarThumbVertical="@color/bahaso_transparent_gray"
        >

        <LinearLayout
            android:id="@+id/layoutLittleBoxSelectionContainer"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:padding="5dp"
                android:textColor="@color/bahaso_black"
                android:gravity="center"
                android:height="53dp"
                android:background="@drawable/background_square_border_bottom"
                android:id="@+id/textViewLittleBoxSelectionInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextViewTextViewTextViewTextViewTextViewTextView" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
