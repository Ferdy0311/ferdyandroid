<?xml version="1.0" encoding="utf-8"?>
<com.bahaso.util.CheckedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector_rect_checkable_trans2lightgray">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:padding="4dp" />
    <TextView
        android:id="@+id/tv_country_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/bahaso_black"
        android:padding="8dp" />
</com.bahaso.util.CheckedLinearLayout>