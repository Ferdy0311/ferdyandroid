<com.bahaso.util.GoldPacketViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/selector_rect_lightblue_corner"
    android:gravity="center_vertical"
    android:elevation="0dp"
    android:id="@+id/vg_gold_packet_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="8dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_gold_nominal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/bahaso_black"/>

        <TextView
            android:id="@+id/tv_price_nominal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:layout_gravity="center"
            android:gravity="end"
            android:textSize="16sp"
            android:textColor="@color/bahaso_black"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:src="@drawable/black_right_arrow"/>

    </LinearLayout>

</com.bahaso.util.GoldPacketViewGroup>

