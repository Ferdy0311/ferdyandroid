<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

    <RelativeLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/relativeLayoutCaseContainer"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageViewBoxMatchPictureQuestion"
            android:scaleType="fitXY"
            android:background="@drawable/background_image_view_soft_border"

            />


        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/imageViewBoxMatchPictureQuestion"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:id="@+id/relativeLayoutAnswerContainer"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:minHeight="35dp"
            android:background="@drawable/background_box_button_drag_answer_gray_background"
            >
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/containerAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:justifyContent="space_between"
            app:flexWrap="wrap"
            android:clipChildren="false"
            android:clipToPadding="false"
            >




        </com.google.android.flexbox.FlexboxLayout>
    </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>