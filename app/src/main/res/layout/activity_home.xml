<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/TestingTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_lesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true" >

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/lesson_img"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bahaso_transparent_black"
                android:layout_gravity="bottom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bahaso_white_gray"
                android:textAllCaps="true"
                android:text="@string/lesson"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="4dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:clickable="true">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/komunitas_img"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bahaso_transparent_black"
                android:layout_gravity="bottom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bahaso_white_gray"
                android:textAllCaps="true"
                android:text="@string/community"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bahaso_white_gray"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:background="@drawable/rectred_corner2"
                android:text="@string/bahaso_coming_soon"
                android:layout_gravity="end|bottom"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_type_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:clickable="true">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/header_profile"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bahaso_transparent_black"
                android:layout_gravity="bottom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bahaso_white_gray"
                android:textAllCaps="true"
                android:text="All Type Case"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bahaso_white_gray"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:background="@drawable/rectred_corner2"
                android:text="Testing"
                android:layout_gravity="end|bottom"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>