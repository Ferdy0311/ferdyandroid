<?xml version="1.0" encoding="utf-8"?>
<com.bahaso.widget.DroppedStateFrame
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_outer_drop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_drop_rectangle"
    android:minHeight="50dp"
    android:layout_marginBottom="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/case_single_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <com.bahaso.widget.wefikaflowlayout.FlowLayout
            android:id="@+id/flow_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:animateLayoutChanges="true">
        </com.bahaso.widget.wefikaflowlayout.FlowLayout>
    </LinearLayout>

</com.bahaso.widget.DroppedStateFrame>