<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TestingTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:textAllCaps">false</item>

        <!--<item name="colorControlActivated">#23ABFA</item>-->
        <!--<item name="colorControlHighlight">#23ABFA</item>-->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyProgressTheme" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/bahaso_black</item>
        <item name="colorControlActivated">@color/bahaso_blue</item>
        <item name="colorControlHighlight">@color/bahaso_blue</item>
    </style>

    <style name="Bahaso.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/bahaso_dark_blue</item>
        <!-- Used for the title and text -->
        <!--<item name="android:textColorPrimary">#FFFFFF</item>-->
        <!-- Used for the background -->
        <!--<item name="android:background">#4CAF50</item>-->
    </style>

    <style name="Bahaso.AlertDialog.Transparent" parent="Bahaso.AlertDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <!--<item name="android:popupBackground">@color/white</item>-->
        <item name="android:textColor">@color/bahaso_black</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="typeCaseEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/bahaso_black</item>
        <item name="colorControlActivated">@color/bahaso_blue</item>
        <item name="colorControlHighlight">@color/bahaso_blue</item>
    </style>

</resources>
