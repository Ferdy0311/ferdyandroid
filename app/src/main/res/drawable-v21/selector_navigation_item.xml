<?xml version="1.0" encoding="utf-8"?>
<!-- http://stackoverflow.com/questions/28721751/
     make-background-inherit-from-selectableitembackground -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="?android:attr/selectableItemBackground" />
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_enabled="true" android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bahaso_transparent_gray" />
                </shape>
            </item>
            <item android:state_enabled="true" android:state_activated="true" >
                <shape android:shape="rectangle">
                    <solid android:color="@color/bahaso_transparent_gray" />
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
